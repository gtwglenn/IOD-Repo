<!DOCTYPE html>
 <html lang="en">

 <head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Module 1 Exercise 3.1</title>
    
    <style>

        body { 
            font-family: sans-serif; margin: 0; 
        }
        
        .container { 
            display: flex; min-height: 
            100vh; align-items: stretch;
        }
        
        .column { 
            background: goldenrod; display: flex; flex-direction: column; justify-content: center; align-items: center; flex: 1; 
        }

        .exImages {
            image-resolution: 50%;
        }

        .clicky {
            background-color: deeppink;
            color: black;
            border-radius: 5px;
            border-color:green;

        }

        h1 {
            background-color:mediumseagreen; 
            font-family:'Times New Roman', Times, serif;
        }

    </style>

 </head>

 <body>

    <div class="container">

        <div class="column" id="column1">
            <!-- add image to each column -->
            <img class="images" id="image1" src="ex3img1.PNG">

            <h1 id="heading1">Hello</h1>
            <!-- insert button "Change Me" -->
            <button type="button" class="clicky" onclick="changeColumn1()">Change Me</button>
            <!-- style buttons with CSS -->
        </div>

            <!-- button do change backgrnd color (set initial color) and heading text -->

        <div class="column" id="column2">
            <!-- add image to each column -->
            <img class="images" id="image2" src="ex3img2.PNG">

            <h1 id="heading2">World</h1>
            <!-- insert button "Change Me" -->
            <button type="button" class="clicky" onclick="changeColumn2()">Change Me</button>
            <!-- style buttons with CSS -->
        </div>

    </div>

    <!-- change the images to something alien too to fit the theme -->

    <!-- used ChatGPT to help write the JS functions in the following sections -->
    <script>
        // add a script tag w/ 2 JS functions --> one for each button 

        function changeColumn1() {

        var column1 = document.getElementById("column1");
        column1.style.backgroundColor = "crimson";
            // background color --> crimson

        const heading1 = document.getElementById("heading1");
        heading1.textContent = "Greetings";
            // change heading text

        const image1 = document.getElementById("image1");
        image1.src = "alien1.PNG";
            // change image 

        }

        function changeColumn2() {

        var column2 = document.getElementById("column2");
        column2.style.backgroundColor = "crimson";
            // background color --> crimson 

        const heading2 = document.getElementById("heading2");
        heading2.textContent = "Earthlings";
            // change heading text 

        const image1 = document.getElementById("image1");
        image2.src = "alien2.PNG";
            // change image 

        }



    </script>

 </body>


 </html>